<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trans.mapper.StudentMapper">


    <select id="selectByName" resultType="com.trans.entity.Student">
        select
            *
        from student
        where 1 = 1
        and
        <if test="names != null and names.size() > 0">
            <foreach collection="names" open="(" close=")" item="name" separator="or">
               name like concat('%',#{name},"%")
            </foreach>
        </if>

    </select>
    <select id="selectListByName" resultType="java.lang.Integer">
        select
        stu_id
        from student
        where name = '邹铭'

        union all

        select
        stu_id
        from  student
        where name = '山陷位';

    </select>

</mapper>

